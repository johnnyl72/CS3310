package Project2;

public class Node implements Comparable<Node>{
	private int level;
	private double profit;
	private double weight;
	private float bound;
	private double ratio;
	
	public Node() {
		level = 0;
		profit = 0.0;
		weight = 0.0;
		bound =  0;
		ratio = 0.0;
		
	}
	public Node(double profit, double weight) {
		this.profit = profit;
		this.weight = weight;
		ratio = (Math.round( (profit/weight) * 100.0 ) / 100.0);
	}
	public Node(int level, double profit, double weight) {
		this.level = level;
		this.profit = profit;
		this.weight = weight;
		ratio = (Math.round( (profit/weight) * 100.0 ) / 100.0);
	}
	public int getLevel() {
		return level;
	}
	public double getProfit() {
		return profit;
	}
	public double getWeight() {
		return weight;
	}
	public float getBound() {
		return bound;
	}
	public void setLevel(int level) {
		this.level = level;
	}
	public void setProfit(double d) {
		this.profit = d;
	}
	public void setWeight(double weight) {
		this.weight = weight;
	}
	public void setBound(float bound) {
		this.bound = bound;
	}
	
	public double getRatio() {
		ratio = profit/weight;
		return ratio;
	}
	@Override
	public int compareTo(Node other) {
		
		//return (int) (other.bound - bound);
		return (int) (other.ratio - ratio);
		
	}
	public String toString() {
		return " Weight: " + weight + " Profit: " + profit + " Ratio: " + ratio + " Bound: " + bound;
	}
}

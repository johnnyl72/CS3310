package Project1;

import java.util.Arrays;
import java.util.Random;
import java.util.Scanner;

public class QuickSort1 {
	public static void main(String args[]) {
		Random rand = new Random();
		
		System.out.print("How many 2^n entries would you like (0 < n <= 16)?: ");
		Scanner kb = new Scanner(System.in);
		int input = kb.nextInt();
		
		int n = (int) Math.pow(2, input);
		int array[] = new int[n];
		System.out.println("There are " +n+ " entries in the array.");
		kb.close();
		
		//addding random numbers into an array
		for(int i = 0; i < n; i++) {
			array[i] = rand.nextInt(n) + 1; 
			
		}
		System.out.println("Unsorted: " + Arrays.toString(array));
		int low = 0;
		int high = array.length-1;
		quickSort(array, low, high);
		System.out.println("Sorted: " + Arrays.toString(array));
		
	}
	public static void quickSort(int S[], int low, int high) {
	
		if(high > low) {
			
			int pivotpoint = partition(S, low, high);
			
			
			quickSort(S, low, pivotpoint - 1);
			quickSort(S, pivotpoint +1, high);
		}
	}
	public static int partition(int S[], int low, int high) {
		 int pivot = S[high];  
	        int i = (low-1); // index of smaller element 
	        for (int j=low; j<high; j++) 
	        { 
	            // If current element is smaller than or 
	            // equal to pivot 
	            if (S[j] <= pivot) 
	            { 
	                i++; 
	  
	                // swap arr[i] and arr[j] 
	                int temp = S[i]; 
	                S[i] = S[j]; 
	                S[j] = temp; 
	            } 
	        } 
	  
	        // swap arr[i+1] and arr[high] (or pivot) 
	        int temp = S[i+1]; 
	        S[i+1] = S[high]; 
	        S[high] = temp; 
	  
	        return i+1; 
	}
}
